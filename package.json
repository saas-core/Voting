{
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.2.0",
    "eslint": "^5.13.0",
    "eslint-config-google": "^0.12.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-cypress": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333"
  },
  "scripts": {
    "start:local": "PRISMA_ENDPOINT=localhost:4466 PRISMA_ENV=local ts-node ./services/core/src/index.ts",
    "build:packages": "lerna run build",
    "build:prisma:local": "lerna run build:prisma:local",
    "prettier-eslint": "prettier-eslint",
    "prettier": "yarn prettier-eslint --eslint-config-path=.eslintrc",
    "lint:commit": "yarn prettier-eslint --eslint-config-path=.eslintrc --write",
    "lint:packages": "yarn prettier-eslint --eslint-config-path=.eslintrc ./packages/**/*.{ts,tsx,js,jsx,json,md,yml,yaml} --write",
    "lint:fix": "yarn prettier-eslint --eslint-config-path=.eslintrc ./**/*.{ts,tsx,js,jsx,json,md,yml,yaml} --write"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "resolutions": {
    "eslint": "^5.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "yarn lint:commit",
      "git add"
    ]
  },
  "private": true
}
